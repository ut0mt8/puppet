Client {
  Name = <%= name %>
  Address = <%= client_ip %>
  FDPort = 9102
  Catalog = prod
  Password = "FVcaT3srAEQUc"
  AutoPrune = yes
  Heartbeat Interval = 5
}

Job {
  Name = <%= name %>
  Type = Backup
  Client = <%= name %>
  FileSet = <%= name %>
  Schedule = Schedule-<%= client_ip[-1,1] %>
<% if admin_net == "yes" then %>  Storage = File-<%= client_ip[-1,1] %>-admin <% else %>  Storage = File-<%= client_ip[-1,1] %> <% end %>
  Messages = Standard
  Pool = Default # this is a fallback pool that shouldn't ever be used
  Full Backup Pool = Full-Pool-<%= name %>
  Incremental Backup Pool = Inc-Pool-<%= name %>
  Write Bootstrap = "/data/bacula/BSR/<%= name %>.bsr"
<% if runbefore == "ntbackup" then %>  Client Run Before Job = "C:/Backup/BackupSystemState.cmd"<% end %>
  Priority = 10
}

Pool {
  Name = Full-Pool-<%= name %>
  Label Format = Full-<%= name %>-
  Pool Type = Backup
  Recycle = yes                 # automatically recycle Volumes
  AutoPrune = yes               # Prune expired volumes
  Volume Retention = 33 days    # keep at least this month backup and the one before
  Maximum Volume  Bytes = 4.5G  # ensure we can save these volumes on DVDs if needed
  Maximum Volume Jobs = 1       # never use the same file for 2 backups
  Recycle Oldest Volume = Yes   # recyle pruned volume so we don't create a gazillion files
}

Pool {
  Name = Inc-Pool-<%= name %>
  Label Format = Inc-<%= name %>-
  Pool Type = Backup
  Recycle = yes                 # automatically recycle Volumes
  AutoPrune = yes               # Prune expired volumes
  Volume Retention = 7 days     # keep at least this week backups 
  Maximum Volume  Bytes = 4.5G  # ensure we can save these volumes on DVDs if needed
  Maximum Volume Jobs = 1       # never use the same file for 2 backups
  Recycle Oldest Volume = Yes   # recyle pruned volume so we don't create a gazillion files
}

