server {
	listen   80;
	server_name gitweb.srvc.compagny.priv;

	access_log /var/log/nginx/gitweb.srvc.compagny.priv/gitweb.access.log;
	error_log  /var/log/nginx/gitweb.srvc.compagny.priv/gitweb.error.log;

	location / {
		fastcgi_pass 127.0.0.1:7000;
		include "/etc/nginx/fastcgi_params";
		auth_basic            "Restricted access";
		auth_basic_user_file  /home/git/htpasswd;
	}
	location /static {
		alias /usr/share/gitweb;
	}
}
